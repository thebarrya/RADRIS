{
  "Name": "RADRIS PACS",
  "DicomAet": "RADRIS",
  "DicomPort": 4242,
  "HttpPort": 8042,

  "Plugins": [
    "/usr/share/orthanc/plugins/libOrthancGdcm.so",
    "/usr/share/orthanc/plugins/libOrthancDicomWeb.so",
    "/usr/share/orthanc/plugins/libOrthancExplorer2.so",
    "/usr/share/orthanc/plugins-available/libStoneWebViewer.so",
    "/usr/share/orthanc/plugins-available/libOrthancVolView.so"
  ],

  "DicomWeb": {
    "Enable": true,
    "StudiesMetadata": "Full",
    "SeriesMetadata": "Full",
    "EnableMetadataCache": true,
    "MetadataWorkerThreadsCount": 4
  },

  "OrthancExplorer2": {
    "Enable": true,
    "IsDefaultUI": true,
    "Theme": "dark",
    "LogLevel": "default",
    "EnableShares": true,
    "ShowOrthancName": true,
    "UiOptions": {
      "StudyListColumns": [
        "PatientName",
        "PatientID", 
        "StudyDate",
        "StudyDescription",
        "AccessionNumber",
        "Modality"
      ],
      "EnableDeleteResources": true,
      "EnableDownloadZip": true,
      "EnableDownloadDicomFile": true,
      "EnableDownloadDicomDir": true,
      "MaxStudiesDisplayed": 100,
      "MaxSeriesDisplayed": 100
    },
    "Viewers": {
      "StoneWebViewer": {
        "Enable": true,
        "IsDefaultViewer": true
      },
      "VolView": {
        "Enable": true
      }
    }
  },

  "StoneWebViewer": {
    "Enable": true,
    "DateFormat": "DD/MM/YYYY",
    "MaxConcurrentLoads": 6,
    "ShowInfoPanel": true,
    "ShowSeriesThumbnails": true,
    "EnableOpenInOhifViewer3": true,
    "StudyDownloadEnabled": false,
    "SeriesDownloadEnabled": false,
    "ShowUserPreferencesButton": true,
    "UserPreferences": {
      "ShowInfoPanel": true,
      "ShowSeriesThumbnails": true,
      "Language": "fr"
    }
  },

  "HttpServerEnabled": true,
  "HttpDescribeErrors": true,
  "HttpCompressionEnabled": true,
  "HttpRequestTimeout": 60,
  
  "ConcurrentJobs": 4,
  "StorageCompression": false,

  "HttpHeaders": {
    "Access-Control-Allow-Origin": "*",
    "Access-Control-Allow-Methods": "GET, POST, PUT, DELETE, OPTIONS, HEAD",
    "Access-Control-Allow-Headers": "Content-Type, Authorization, Cache-Control, X-Requested-With, Accept, Origin, DNT, User-Agent, If-Modified-Since, Keep-Alive, X-Requested-With, If-Modified-Since, X-File-Name, X-File-Size, X-Mime-Type, Range",
    "Access-Control-Allow-Credentials": "false",
    "Access-Control-Max-Age": "86400",
    "Access-Control-Expose-Headers": "Content-Length, Content-Type, Date, Server, Content-Range, Accept-Ranges"
  },



  "DicomServerEnabled": true,
  "DicomAlwaysAllowEcho": true,
  "DicomAlwaysAllowFind": true,
  "DicomAlwaysAllowMove": true,
  "DicomAlwaysAllowGet": true,
  "DicomAlwaysAllowStore": true,

  "RemoteAccessAllowed": true,
  "AuthenticationEnabled": false,
  "SslEnabled": false,
  "CorsEnabled": true,

  "LimitFindResults": 0,
  "LimitFindInstances": 0,
  "MaximumStorageSize": 0,
  "MaximumPatientCount": 0,

  "LogLevel": "default",


  "StorageDirectory": "/var/lib/orthanc/db",
  "IndexDirectory": "/var/lib/orthanc/db"
}